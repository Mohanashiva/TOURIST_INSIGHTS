<body>
    
        <!-- creating header with sticky-top i.e.,fixed on top-->
        <header class="text-gray-600 body-font header">
            <div class="container mx-auto flex flex-wrap p-3 flex-col md:flex-row items-center">
              <a class="flex title-font font-medium items-center text-gray-900 mb-2 md:mb-0">
                <img src="/images/logo.PNG" alt="Your Logo" class="w-11 h-13">
                <span class="ml-3 text-xl">ParKahan</span>
              </a>
              <nav class="md:ml-auto flex flex-wrap items-center text-base justify-center sticky-top">
                <a class="mr-5 hover:text-gray-900" href="/parkahan" >Home</a>
                <a class="mr-5 hover:text-gray-900">About</a>
                <a class="mr-5 hover:text-gray-900">Contact</a>
              </nav>
              <!-- <a href="/signout"
                class="inline-flex items-center bg-gray-100 border-0 py-1 px-3 focus:outline-none hover:bg-gray-200 rounded text-base md:mt-0">
                Signout</a> -->
              <svg fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                class="w-4 h-4 ml-1" viewBox="0 0 24 24">
                <path d="M5 12h14M12 5l7 7-7 7"></path>
              </svg>
              </button>
            </div>
          </header>
          </nav>
          </div>
    <div class="relative flex min-h-screen flex-col jsutify-center overflow-hidden py-6 bg-gray-50 ">
        <div
            class="relative bg-white mt-20 px-6 pb-5 shadow-xl ring-1 ring-gray-900/5 sm:mx-auto sm:max-w-lg sm:rounded-lg sm:px-10">
            <div class="mx-auto max-w-md">
                <h2 class="text-2xl  text-center font-bold my-5">
                    SignUp As New User
                </h2>
                <div class="divide-y  divide-gray-300/50">
                    <div class="space-y-6 text-base leading-7 text-ray-600">
                        <form action="/user" method="post" id="user_form">
                            <label for="FirstName" class="text-md w-40 inline-block font-medium leading-5 text-gray-700">

                                First name
                            </label>
                            <input required type="text" id="firstName" name="firstName"
                                class="bg-gray-100 inline-block rounded-lg shadow-md py-3 px-4 mb-5 text-base leading-6 placeolder-gray-500"
                                placeholder="Enter First Name.." required><br />
                            <label for="LastName" class="text-md w-40 inline-block font-medium leading-5 text-gray-700">

                                Last name
                            </label>
                            <input required type="text" id="lastName" name="lastName"
                                class="bg-gray-100 inline-block rounded-lg shadow-md py-3 px-4 mb-5 text-base leading-6 placeolder-gray-500"
                                placeholder="Enter Last Name.." required><br />
                            <label for="Email"
                                class="text-md w-40 inline-block font-medium leading-3 text-gray-700">Email</label>
                            <input required type="email" id="email" name="email"
                                class="bg-gray-100 inline-block rounded-lg shadow-md py-3 px-4 mb-5 text-base leading-6 placeolder-gray-500"
                                placeholder="Enter Email.."><br />
                            <label for="password" class="text-md w-40 inline-block font-medium leading-5 text-gray-700">
                                Password
                            </label>
                            <input required type="password" id="password" name="password"
                                class="bg-gray-100 inline-block rounded-lg shadow-md py-3 px-4 mb-5 text-base leading-6 placeolder-gray-500"
                                placeholder="Enter Password.."><br />
                            <div class="py-3">
                                <button type="submit"
                                    class="text-white bg-green-600 hover:bg-green-700 font-medium rounded px-5 py-2">Sign
                                    up
                                </button>
                            </div>
                        </form>
                        <p>Already have an account?<a href="/signin" class="text-green-600 underline"> login here</a></p>
                    </div>
                    <div class="relative mx-auto mb-8 w-fit">
                        <% if(messages && messages.error && messages.error.length > 0)  { %>
                           <% for(var i=0; i<messages.error.length; i++) { %>
                                <br>   <li class="text-white rounded px-32 py-6 bg-red-500"> <%= messages.error[i] %></li>
                           <% } %>
                         <% } %>
                          </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/darkmode-js@1.3.4/lib/darkmode-js.min.js"></script>
