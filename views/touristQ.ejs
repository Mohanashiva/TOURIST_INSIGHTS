                    <!-- questions.ejs -->
                    <form action="/TRecommendations" method="POST">
                        <div id="questions-set-1" class="p-5">
                            <!-- First set of questions -->
                            <label for="region" class="px-3 pb-5 text-l font-bold font-serif">1. Region of India do you want to explore?</label>
                           
                            <select id="region" name="region" class="p-5 m-auto text-xl font-serif">
                                <option value="north">North</option>
                                <option value="south">South</option>
                                <option value="west">West</option>
