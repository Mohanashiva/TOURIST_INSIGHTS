                                <!-- we can more options as needed -->
                            </select>
                            <br>
                            <button class="bg-pink-600 hover:bg-pink-800 text-white rounded px-2 py-2 ml-72 font-sans" id="next-button"
                                type="button" onclick="showNextSet()">Next</button>
                        </div>
                        <div id="questions-set-2" style="display: none;" class="p-5">
                            <!-- Second set of questions -->
                            <label for="type" class="px-3 pb-5 text-l font-bold font-serif">2. What type of place do you want to visit?</label>
                            <select id="type" name="type" class="p-5 text-xl font-serif">
                                <option value="Hill Station">Hill station</option>
                                <option value="Historical & Heritage">Historical & Heritage</option>
                                 <option value="Pilgrimage">Pilgrimage</option>
                                <option value="City">City</option>
                                <option value="Beach">Beach</option>
                                <!-- we can Add more options as needed -->
                            </select>
                            <button id="previous-button" type="button" onclick="showPreviousSet()">Previous</button>
                            <button id="submit-button" type="submit" style="display: none;" class="bg-blue-600 hover:bg-blue-800 text-white rounded px-2 py-2 m-auto" id="next-button">
                                Submit</button>
                        </div>

                    </form>
                    

                    <script>
                        let currentQuestionSet = 1;

                        function showNextSet() {
                            if (currentQuestionSet < 2) {
                                document.getElementById(`questions-set-${currentQuestionSet}`).style.display = "none";
                                currentQuestionSet++;
                                document.getElementById(`questions-set-${currentQuestionSet}`).style.display = "block";

                                // If it's the last question, show the submit button
                                if (currentQuestionSet === 2) {
                                    document.getElementById("submit-button").style.display = "inline-block";
                                }

                                // If it's not the last question, show the previous button
                                if (currentQuestionSet < 2) {
                                    document.getElementById("previous-button").style.display = "inline-block";
                                }
                            }
                        }

                        function showPreviousSet() {
                            if (currentQuestionSet > 1) {
                                document.getElementById(`questions-set-${currentQuestionSet}`).style.display = "none";
                                currentQuestionSet--;
                                document.getElementById(`questions-set-${currentQuestionSet}`).style.display = "block";

                                // If not on the last question, hide the submit button
                                document.getElementById("submit-button").style.display = "none";

                                // If it's not the first question, show the next button
                                if (currentQuestionSet < 2) {
                                    document.getElementById("next-button").style.display = "inline-block";
                                }

                                // If it's the first question, hide the previous button
                                if (currentQuestionSet === 1) {
                                    document.getElementById("previous-button").style.display = "none";
                                }
                            }
                        }
                    </script>
